                </form>
            </div>
            
            <div class="mb-6 text-center">
                <h2 class="text-2xl font-bold text-gray-700">
                    @ViewBag.Year YÄ±lÄ± - Hafta @ViewBag.WeekNumber
                </h2>
            </div>
            
            @if (rankings != null && rankings.Count >= 3)
            {
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    <div class="bg-gradient-to-br from-yellow-100 to-yellow-200 p-8 rounded-2xl text-center transform hover:scale-105 transition">
                        <div class="text-6xl mb-4">ðŸ¥‡</div>
                        <div class="text-2xl font-bold text-yellow-800">@rankings[0].user.UserName</div>
                        <div class="text-lg text-yellow-600">
                            <div>@rankings[0].points Puan</div>
                            <div>@rankings[0].averaj Averaj</div>
                        </div>
                    </div>
                    
                    @if (rankings.Count > 1)
                    {
                        <div class="bg-gradient-to-br from-gray-100 to-gray-300 p-8 rounded-2xl text-center transform hover:scale-105 transition">
                            <div class="text-6xl mb-4">ðŸ¥ˆ</div>
                            <div class="text-2xl font-bold text-gray-800">@rankings[1].user.UserName</div>
                            <div class="text-lg text-gray-600">
                                <div>@rankings[1].points Puan</div>
                                <div>@rankings[1].averaj Averaj</div>
                            </div>
                        </div>
                    }
                    
                    @if (rankings.Count > 2)
                    {
                        <div class="bg-gradient-to-br from-orange-100 to-orange-200 p-8 rounded-2xl text-center transform hover:scale-105 transition">
                            <div class="text-6xl mb-4">ðŸ¥‰</div>
                            <div class="text-2xl font-bold text-orange-800">@rankings[2].user.UserName</div>
                            <div class="text-lg text-orange-600">
