@{
    ViewData["Title"] = "HaftalÄ±k Raporlar";
    var rankings = ViewBag.Rankings as List<(string rank, DokuzTasOnlineTurnuva.Models.ApplicationUser user, int points, int averaj)>;
}

<div class="min-h-screen p-4 md:p-8">
    <div class="max-w-7xl mx-auto">
        <div class="bg-white rounded-3xl shadow-2xl p-6 md:p-12">
            <h1 class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-8">
                ðŸ“Š HaftalÄ±k Raporlar
            </h1>
            
            <div class="mb-6 flex gap-4">
                <form method="get" class="flex gap-2">
                    <input type="number" name="weekNumber" value="@ViewBag.WeekNumber" placeholder="Hafta" class="px-4 py-2 border rounded" />
                    <input type="number" name="year" value="@ViewBag.Year" placeholder="YÄ±l" class="px-4 py-2 border rounded" />
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded">
                        GÃ¶ster
