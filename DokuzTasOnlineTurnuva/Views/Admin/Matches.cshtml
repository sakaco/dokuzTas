@model IEnumerable<DokuzTasOnlineTurnuva.Models.Match>

@{
    ViewData["Title"] = "Ma√ß Ge√ßmi≈üi";
}

<div class="min-h-screen p-4 md:p-8">
    <div class="max-w-7xl mx-auto">
        <div class="bg-white rounded-3xl shadow-2xl p-6 md:p-12">
            <h1 class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-8">
                üéÆ Ma√ß Ge√ßmi≈üi
            </h1>
            
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b-2 border-gray-200">
                            <th class="p-3 text-left">Tarih</th>
                            <th class="p-3 text-left">Oyuncu 1</th>
                            <th class="p-3 text-left">Oyuncu 2</th>
                            <th class="p-3 text-center">Kazanan</th>
                            <th class="p-3 text-center">T√ºr</th>
                            <th class="p-3 text-center">Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var match in Model)
                        {
                            <tr class="border-b border-gray-100 hover:bg-gray-50">
                                <td class="p-3 text-sm">@match.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="p-3">
                                    @match.Player1.UserName
                                    @if (match.Player1Quit)
                                    {
                                        <span class="text-red-600 text-xs">‚ùå</span>
                                    }
                                </td>
                                <td class="p-3">
                                    @match.Player2.UserName
                                    @if (match.Player2Quit)
                                    {
                                        <span class="text-red-600 text-xs">‚ùå</span>
                                    }
                                </td>
                                <td class="p-3 text-center font-bold text-green-600">
                                    @if (match.WinnerId != null)
                                    {
                                        var winner = match.WinnerId == match.Player1Id ? match.Player1 : match.Player2;
                                        @winner.UserName
                                    }
                                </td>
                                <td class="p-3 text-center">
                                    @switch (match.MatchType)
                                    {
                                        case DokuzTasOnlineTurnuva.Models.MatchType.League:
                                            <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">Lig</span>
                                            break;
                                        case DokuzTasOnlineTurnuva.Models.MatchType.QuarterFinal:
                                            <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded text-xs">√áeyrek</span>
                                            break;
                                        case DokuzTasOnlineTurnuva.Models.MatchType.SemiFinal:
                                            <span class="bg-orange-100 text-orange-800 px-2 py-1 rounded text-xs">Yarƒ±</span>
                                            break;
                                        case DokuzTasOnlineTurnuva.Models.MatchType.Final:
                                            <span class="bg-red-100 text-red-800 px-2 py-1 rounded text-xs">Final</span>
                                            break;
                                    }
                                </td>
                                <td class="p-3 text-center">
                                    @switch (match.Status)
                                    {
                                        case DokuzTasOnlineTurnuva.Models.MatchStatus.Completed:
                                            <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs">‚úì</span>
                                            break;
                                        case DokuzTasOnlineTurnuva.Models.MatchStatus.InProgress:
                                            <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">‚è≥</span>
                                            break;
                                        case DokuzTasOnlineTurnuva.Models.MatchStatus.Cancelled:
                                            <span class="bg-red-100 text-red-800 px-2 py-1 rounded text-xs">‚ùå</span>
                                            break;
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
